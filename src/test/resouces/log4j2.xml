<?xml version="1.0" encoding="UTF-8"?>

<Configuration status="WARN">
  <Properties>
    <Property name="basePath">"C:\Users\DELL\.vscode\hometriangle\hometriangle\logs"</Property> <!-- Relative path to the logs folder -->
    <!-- Alternatively, use an absolute path -->
    <!-- <Property name="basePath">C:/path/to/your/logs</Property> -->
  </Properties>

  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
    </Console>

    <RollingFile name="File"
      fileName="${basePath}/automation.log"
      filePattern="${basePath}/automation-%d{yyyy-MM-dd}.log">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
      <SizeBasedTriggeringPolicy size="50000" />
    </RollingFile>
  </Appenders>

  <Loggers>
    <Root level="info">
      <!-- <AppenderRef ref="Console"/> -->
      <AppenderRef ref="File" />
    </Root>
  </Loggers>
</Configuration>